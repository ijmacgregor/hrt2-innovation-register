<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:f="sap.ui.layout.form"
   xmlns:core="sap.ui.core" >
    <Dialog draggable="true" title="Suggestion detail">
        <content>
            <f:SimpleForm layout="ResponsiveGridLayout">
                <Label text="Title" />    
                <Input value="{suggestionTitle}" />

                <Label text="Description" />
                <TextArea value="{suggestionDescription}" width="100%" rows="5" />


                <Label text="On SAP product roadmap" />
                <CheckBox text="Yes" selected="{onProductRoadmap}" />
            </f:SimpleForm>
        </content>
        
        <beginButton>
            <Button text="Save" type="Emphasized" press=".onSaveSuggestion" />
        </beginButton>

        <endButton>
            <Button text="Cancel" press=".onCancelEdit" />
        </endButton>
        
    </Dialog>
</core:FragmentDefinition>